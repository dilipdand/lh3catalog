<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="large-10 large-centered column">
			<%= f.text_field :name, placeholder: "Product Name" %>
  </div>
  <div class="large-10 large-centered column">
	<%= f.text_area :description, placeholder: "Product Description" %>
  </div>
<div class="large-10 large-centered column">
	<%= f.text_field :all_categories, placeholder: "Product Categories" %>
</div>
<div class="large-10 large-centered column">
	<%= f.text_field :all_tags, placeholder: "Tags" %>
</div>
<div class="large-10 large-centered column">
	<%= f.text_field :website, placeholder: "Website URL" %>
</div>
<div class="large-10 large-centered column">
	<%= f.file_field :logo, placeholder: "Logo" %>
</div>
<div class="large-10 large-centered column">
	<%= f.text_field :city, placeholder: "City"%>
	<%= f.text_field :state, placeholder: "State"%>
	<%= f.text_field :country, placeholder: "Country"%>
</div>
<div class="large-10 large-centered column">
	Saas: <%= f.check_box :saas %>
</div>
<div class="large-10 large-centered column">
	Agency: <%= f.check_box :agency %>
</div>
<div class="large-10 large-centered column">
	API: <%= f.check_box :api %>
</div>
<div class="large-10 large-centered column">
	<%= f.text_field :compensation, placeholder: "Compensation" %>
</div>
<div class="large-10 large-centered column">
	Freemium: <%= f.check_box :freemium %>
</div>
<div class="large-10 large-centered column">
	<%= f.text_field :per_campaign_price, placeholder: "Per Campaign Price" %>
</div>
<div class="large-10 large-centered column">
	<%= f.text_field :base_price, placeholder: "Base Price" %>
</div>
<div class="large-10 large-centered column">
	<%= f.text_field :smb_price, placeholder: "SMB Price" %>
</div>
<div class="large-10 large-centered column">
	<%= f.text_field :ent_price, placeholder: "Enterprise Price" %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
